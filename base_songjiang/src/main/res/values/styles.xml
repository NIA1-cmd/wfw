<resources>

    <!--&lt;!&ndash; Base application theme. &ndash;&gt;-->
    <style name="SongjiangAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/maincolor_01</item>
        <item name="colorPrimaryDark">@color/maincolor_01</item>
        <item name="colorAccent">@color/maincolor_01</item>


        <item name="android:windowBackground">@color/backgroundcolor_01</item>
    </style>

    <!--透明背景的窗口-->
    <style name="windowIsTransTheme" parent="SongjiangAppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <!-- 底部菜单样式 -->
    <style name="lab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 底部菜单text样式 -->
    <style name="labtext_style">

        <item name="android:textSize">@dimen/textsize_small_x_x</item>
        <item name="android:layout_marginBottom">@dimen/unit_05</item>
        <item name="android:textColor">@color/textcolor_03</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 底部菜单icon样式 -->
    <style name="labicon_style">
        <item name="android:layout_marginTop">@dimen/unit_06</item>

        <item name="android:layout_width">@dimen/unit_20</item>
        <item name="android:layout_height">@dimen/unit_20</item>
    </style>

    <!--支付时弹出输入密码的框-->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>


    <!-- ActionSheet进出动画 -->
    <style name="dialog_activity_animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/open_activity_incenter</item>
        <item name="android:windowExitAnimation">@anim/close_activity_incenter</item>
    </style>



    <!--普通的labtextview-->
    <style name="lab_text_style">
        <item name="android:layout_height">@dimen/unit_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/maincolor_01</item>
        <item name="android:textSize">@dimen/normal_textsize_01</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>

    </style>


    <!--普通的按钮 例如登录按钮  蓝色大圆角-->
