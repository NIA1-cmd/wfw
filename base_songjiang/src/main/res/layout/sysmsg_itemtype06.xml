<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="300dp"
    android:minWidth="200dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:minWidth="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit_10"
            android:layout_marginTop="@dimen/unit_10"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_textsize_02"
            tools:text="线索" />

        <LinearLayout
            android:id="@+id/ll_type"

            style="@style/linearLayout_style_01"
            android:layout_marginLeft="@dimen/unit_10"
            android:layout_marginTop="@dimen/unit_10"

            android:visibility="gone">

            <TextView
                android:id="@+id/tv_types"
                style="@style/text_style_16"
              />

            <TextView
                android:id="@+id/tv_type"

                style="@style/text_style_16"
                android:layout_marginLeft="@dimen/unit_20"

                tools:text="车辆" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_type02"



            style="@style/linearLayout_style_01"
            android:layout_marginLeft="@dimen/unit_10"
            android:layout_marginTop="@dimen/unit_10"
            android:visibility="gone">


            <TextView
                android:id="@+id/tv_types02"
                style="@style/text_style_16"
                android:text="" />

            <TextView

                android:id="@+id/tv_type02"
                style="@style/text_style_16"
                android:layout_marginLeft="@dimen/unit_20"
                tools:text="车辆" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_verification_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_10"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="200dp"
                android:layout_height="@dimen/unit_0.5"
                android:layout_marginBottom="@dimen/unit_10"

                android:background="@color/translucent_04" />

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/unit_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_16"
                    android:text="核查结果" />

                <TextView
                    android:id="@+id/tv_verification_result"
                    style="@style/text_style_16"
                    android:layout_marginLeft="@dimen/unit_20"

                    tools:text="不实" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit_10"
            android:layout_marginTop="@dimen/unit_10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_frist"
                android:layout_width="@dimen/unit_40"
                android:layout_height="@dimen/unit_40"

                android:layout_marginLeft="@dimen/unit_05"
                android:scaleType="centerCrop"
                tools:src="@drawable/welcom" />

            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="@dimen/unit_40"
                android:layout_height="@dimen/unit_40"
                android:layout_marginLeft="@dimen/unit_05"
                android:scaleType="centerCrop"
                tools:src="@drawable/welcom" />

            <ImageView
                android:id="@+id/iv_third"
                android:layout_width="@dimen/unit_40"
                android:layout_height="@dimen/unit_40"
                android:layout_marginLeft="@dimen/unit_05"
                android:scaleType="centerCrop"
                tools:src="@drawable/welcom" />


            <ImageView
                android:id="@+id/iv_fourth"
                android:layout_width="@dimen/unit_40"
                android:layout_height="@dimen/unit_40"
                android:layout_marginLeft="@dimen/unit_05"

                android:layout_marginRight="@dimen/unit_05"
                android:scaleType="centerCrop"
                tools:src="@drawable/welcom" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unit_10"
        android:background="@drawable/white_bottom_radius"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/unit_10"
        android:paddingTop="@dimen/unit_10">

        <TextView
            android:id="@+id/tv_contetn"
            style="@style/text_style_10"
            android:layout_gravity="center_horizontal"
            tools:text="查看" />

        <TextView
            android:id="@+id/tv_remark"
            style="@style/text_style_10"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/unit_10"
            android:layout_marginRight="@dimen/unit_10"
            android:layout_marginTop="@dimen/unit_05"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone"
            tools:text="dfdsfsd" />

    </LinearLayout>

</LinearLayout>