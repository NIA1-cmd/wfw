<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.oncloudsoft.sdk.view.BaseTitleView
        android:id="@+id/bt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.oncloudsoft.sdk.view.BaseTitleView>

    <RelativeLayout
        android:id="@+id/invalid_team_tip"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/nim_message_activity_top_tip"
        android:visibility="gone">

        <TextView
            android:id="@+id/invalid_team_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/team_invalid_tip"
            android:textColor="@color/color_yellow_796413"
            android:textSize="14sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/team_notify_bar_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:id="@+id/message_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="@dimen/unit_36"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/unit_15"
            android:layout_marginTop="@dimen/unit_10"
            android:background="@drawable/white_radius_02"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_baseifno"
                android:layout_marginTop="@dimen/unit_09"
                android:layout_marginBottom="@dimen/unit_09"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center"
                android:src="@drawable/base_info" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/unit_0.5"
                android:layout_margin="@dimen/unit_02"

                android:background="#E7E7EB"
                />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_marginTop="@dimen/unit_09"
                android:layout_marginBottom="@dimen/unit_09"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center"
                android:src="@drawable/icon_search_message" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/unit_0.5"
                android:layout_margin="@dimen/unit_02"
                android:background="#E7E7EB" />

            <FrameLayout
                android:id="@+id/iv_teammember"
                android:layout_marginTop="@dimen/unit_09"
                android:layout_marginBottom="@dimen/unit_09"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_message_all" />
                <View
                    android:id="@+id/red_message"
                    android:layout_width="@dimen/unit_07"
                    android:layout_height="@dimen/unit_07"
                    android:layout_gravity="right"
                    android:background="@drawable/red_radius"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>