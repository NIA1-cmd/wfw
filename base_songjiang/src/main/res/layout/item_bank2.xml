<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <View android:layout_height="0.5dp"
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/unit_10"
        android:layout_marginRight="@dimen/unit_10"
        android:background="@color/orthercolor_03"/>
    <com.oncloudsoft.sdk.view.BaseItemTextView
        android:id="@+id/tv_cartnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:endIconVisibility="gone"
        app:labName="卡号"/>
    <com.oncloudsoft.sdk.view.BaseItemTextView
        android:id="@+id/tv_action_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:endIconVisibility="gone"
        app:labName="账号状态"/>
    <com.oncloudsoft.sdk.view.BaseItemTextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:endIconVisibility="gone"
        app:labName="币种"/>
    <com.oncloudsoft.sdk.view.BaseItemTextView
        android:id="@+id/tv_ye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:endIconVisibility="gone"
        app:labName="余额"/>
    <com.oncloudsoft.sdk.view.BaseItemTextView
        android:id="@+id/tv_kyye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:endIconVisibility="gone"
        app:labName="可用余额"/>
</LinearLayout>
