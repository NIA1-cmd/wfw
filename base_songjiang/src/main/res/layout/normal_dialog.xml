<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    >

    <TextView
        android:textColor="@color/textcolor_05"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/unit_30"
        android:layout_marginTop="@dimen/unit_30"
        tools:text="dfdsfs" />

    <include
        android:id="@+id/ic_lines"
        layout="@layout/line_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_0.5"
        android:layout_below="@+id/tv_title" />

    <LinearLayout
        android:layout_marginTop="@dimen/unit_11"
        android:layout_marginBottom="@dimen/unit_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/textcolor_02"
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/cancel" />

        <include
            android:id="@+id/ic_line"
            layout="@layout/line_layout"
            android:layout_width="@dimen/unit_0.5"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_confirm"
            android:textColor="@color/textcolor_02"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/confirm" />

    </LinearLayout>
</RelativeLayout>