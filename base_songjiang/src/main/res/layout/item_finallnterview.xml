<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/unit_50"
    android:layout_marginTop="@dimen/unit_01"
    android:background="@color/white"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/iv_check"
        android:layout_marginLeft="@dimen/unit_15"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@drawable/ck_normal_red"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unit_10"
        android:layout_toRightOf="@+id/iv_check"
        android:text="@string/blockchain"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/unit_15"
        android:text="2019/10/1"
        />
</RelativeLayout>