<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/unit_10"
    android:layout_marginRight="@dimen/unit_02"
    android:paddingLeft="@dimen/unit_06"
    android:paddingRight="@dimen/unit_14"
    android:paddingTop="@dimen/unit_06"
    android:id="@+id/linear"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_40"
        android:background="#FAFAFA"
        android:gravity="center"
        android:text="基本信息"
        android:textColor="@color/maincolor_01"
        android:textSize="@dimen/text_size_14"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="@dimen/unit_10"
        android:layout_marginRight="@dimen/unit_12"
        android:background="@drawable/shape_line_dash"
        />

    <com.oncloudsoft.sdk.view.BaseItemTextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:endIconVisibility="gone"
        app:labName="案号"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/unit_10"
        android:layout_marginRight="@dimen/unit_14"
        android:background="@color/orthercolor_03"
        />

    <com.oncloudsoft.sdk.view.BaseItemTextView
        android:id="@+id/tv_bzxr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:endIconVisibility="gone"
        app:labName="被执行人"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/unit_10"
        android:layout_marginRight="@dimen/unit_14"
        android:background="@color/orthercolor_03"
        />

    <com.oncloudsoft.sdk.view.BaseItemTextView
        android:id="@+id/tv_zjhm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:endIconVisibility="gone"
        app:labName="证件号码"
        android:layout_marginBottom="@dimen/unit_15"
        />
</LinearLayout>
