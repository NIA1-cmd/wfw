<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/white_radius">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/unit_30"
        android:text="如何执行唯一住房？"
        android:textColor="@color/textcolor_01"
        android:textSize="@dimen/textsize_large" />


    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/unit_10"
        android:layout_marginLeft="@dimen/unit_30"

        android:layout_marginRight="@dimen/unit_30"
        android:layout_marginTop="@dimen/unit_10"
        android:text="符合以下情形之一的，人民法院可以执行"
        android:textColor="@color/textcolor_02"
        android:textSize="@dimen/text_size_14" />

    <include
        android:id="@+id/ic_line"
        layout="@layout/line_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_0.5"
        android:layout_below="@+id/tv_tip" />


    <TextView
        android:id="@+id/tv_content01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/unit_10"
        android:layout_marginLeft="@dimen/unit_30"
        android:lineSpacingExtra="@dimen/unit_03"
        android:layout_marginRight="@dimen/unit_30"
        android:layout_marginTop="@dimen/unit_10"
        android:text="1.对被执行人有抚养义务的人名下有其能够以维持生活必须的居住房屋的；"
        android:textColor="@color/textcolor_02"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_content02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/unit_03"
        android:layout_alignLeft="@+id/tv_content01"
        android:layout_alignStart="@+id/tv_content01"
        android:layout_marginRight="@dimen/unit_30"
        android:layout_below="@+id/tv_content01"
        android:layout_marginTop="10dp"
        android:text="2.执行依据生效后，被执行人为逃避债务转让其名下其他房屋；"
        android:textColor="@color/textcolor_02"
        android:textSize="@dimen/text_size_14"
        />

    <TextView
        android:id="@+id/tv_content03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content02"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/unit_10"
        android:layout_marginLeft="@dimen/unit_30"
        android:lineSpacingExtra="@dimen/unit_03"
        android:layout_marginRight="@dimen/unit_30"
        android:layout_marginTop="@dimen/unit_10"
        android:text="3.申请执行人按照当地廉租居住房保障面积标准为被执行人以及所抚养家属提供居住房屋"
        android:textColor="@color/textcolor_02"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_content04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content03"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="@dimen/unit_03"
        android:layout_marginBottom="@dimen/unit_10"
        android:layout_marginLeft="@dimen/unit_30"
        android:layout_marginRight="@dimen/unit_30"
        android:layout_marginTop="@dimen/unit_10"
        android:text="4.申请执行人同意参照当地房屋租赁市场平均租金标准从该房屋的变价款中扣除五至八年租的 。"
        android:textColor="@color/textcolor_02"
        android:textSize="@dimen/text_size_14" />


    <TextView
        android:id="@+id/tv_back"
        style="@style/button_style_blue01"
        android:layout_below="@+id/tv_content04"
        android:layout_marginBottom="@dimen/unit_20"
        android:layout_marginTop="@dimen/unit_20"
        android:text="关闭" />

</RelativeLayout>