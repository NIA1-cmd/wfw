<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit_50"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit_20"
            android:layout_marginRight="@dimen/unit_20"
            android:layout_toLeftOf="@+id/tv_cancel"
            android:background="@drawable/search_message_radius"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/unit_05"
            android:paddingTop="@dimen/unit_05">

            <EditText
                android:id="@+id/query"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_weight="9"
                android:background="@null"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="@dimen/unit_05"
                android:ellipsize="end"
                android:gravity="bottom"
                android:hint="@string/search"
                android:minWidth="270dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColorHint="@color/orthercolor_03"
                android:textCursorDrawable="@drawable/shape_black"
                android:textSize="@dimen/textsize_normal" />

            <!--<ImageView-->
            <!--android:id="@+id/search_clear"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_weight="1"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/icon_search_cancel"-->
            <!--android:visibility="invisible"-->
            <!--/>-->
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/unit_30"
            android:layout_height="@dimen/unit_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/unit_20"
            android:gravity="center"
            android:text="@string/cancel" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/unit_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/unit_20"
        android:paddingRight="@dimen/unit_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/unit_10"
            android:layout_marginTop="@dimen/unit_10"
            android:text="搜索指定内容" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/unit_10"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/unit_10"
                android:layout_marginTop="@dimen/unit_10"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="群成员" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_photo_video"
                android:layout_alignBottom="@+id/tv_photo_video"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="日期" />

            <TextView
                android:id="@+id/tv_photo_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/unit_10"
                android:layout_marginTop="@dimen/unit_10"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="图片及视频" />

            <TextView
                android:id="@+id/tv_service_documents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team"
                android:layout_marginBottom="@dimen/unit_10"
                android:layout_marginTop="@dimen/unit_10"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="文书送达" />

            <TextView
                android:id="@+id/tv_case_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/unit_10"
                android:layout_marginTop="@dimen/unit_10"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="办案指引" />


            <TextView
                android:id="@+id/tv_message_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_team"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/unit_10"
                android:layout_marginTop="@dimen/unit_10"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="消息通知" />

            <TextView
                android:id="@+id/tv_clue_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_service_documents"


                android:layout_marginBottom="@dimen/unit_10"
                android:layout_marginTop="@dimen/unit_10"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="线索核查" />

            <TextView
                android:id="@+id/tv_apply_discipline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_service_documents"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/unit_10"
                android:layout_marginTop="@dimen/unit_10"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="申请惩戒" />
            <TextView
                android:id="@+id/tv_all"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_apply_discipline"
                android:background="@color/orthercolor_04"
                android:paddingBottom="@dimen/unit_05"
                android:paddingLeft="@dimen/unit_20"
                android:paddingRight="@dimen/unit_20"
                android:paddingTop="@dimen/unit_05"
                android:text="所有记录" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
