<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:background="@color/lin_color"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:textColor="#cccccc"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_0.5"
            android:layout_gravity="bottom"
            android:layout_marginLeft="68dp"
            android:background="@color/divider"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/social_item_ll"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/layout_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/unit_17"
            android:layout_height="@dimen/unit_17"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:button="@drawable/em_checkbox_bg_selector"
            android:focusable="false"
            android:visibility="gone"
            />

        <FrameLayout
            android:layout_width="@dimen/avatar_size_in_session"
            android:layout_height="@dimen/avatar_size_in_session"
            android:layout_marginLeft="@dimen/bubble_padding_left"
            >

            <ImageView
                android:id="@+id/touxiang"
                android:layout_width="@dimen/avatar_size_in_session"
                android:layout_height="@dimen/avatar_size_in_session"
                android:scaleType="centerCrop"
                tools:src="@drawable/app_logo"
                />

            <View
                android:id="@+id/red_view"
                android:layout_width="@dimen/unit_08"
                android:layout_height="@dimen/unit_08"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/unit_02"
                android:layout_marginRight="@dimen/unit_02"
                android:background="@drawable/red_radius"
                android:visibility="gone"
                />
        </FrameLayout>
        <!-- <ImageView
             android:id="@+id/touxiang"
             android:layout_width="@dimen/avatar_size_in_session"
             android:layout_height="@dimen/avatar_size_in_session"
             android:layout_marginLeft="@dimen/bubble_padding_left"
             android:scaleType="centerCrop"
             tools:src="@drawable/app_logo"
             />-->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="Ameng"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_01"
            android:layout_gravity="bottom"
            android:layout_marginLeft="68dp"
            android:background="@color/divider"
            android:visibility="gone"
            />
    </LinearLayout>

    <!--<View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/divider"
        android:visibility="gone"
        />-->
</LinearLayout>