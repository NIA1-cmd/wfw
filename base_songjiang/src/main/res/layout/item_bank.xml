<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/unit_10"
    android:layout_marginRight="@dimen/unit_02"
    android:orientation="vertical"
    android:paddingLeft="@dimen/unit_10"
    android:paddingRight="@dimen/unit_16"
    android:paddingTop="@dimen/unit_10"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/unit_10"
        android:layout_marginTop="@dimen/unit_10"
        android:text="中国人民银行"
        android:textColor="@color/maincolor_01"
        android:textSize="@dimen/text_size_14"
        />

    <com.oncloudsoft.sdk.widget.MyListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/unit_15"
        />
</LinearLayout>
